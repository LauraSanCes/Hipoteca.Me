<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen_amort.Item_fila">

    <TextView
        android:id="@+id/txt_view_interes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Interes"
        app:layout_constraintBottom_toBottomOf="@+id/txt_view_result"
        app:layout_constraintEnd_toStartOf="@+id/txt_view_pend"
        app:layout_constraintStart_toEndOf="@+id/txt_view_result"
        app:layout_constraintTop_toTopOf="@+id/txt_view_id" />

    <TextView
        android:id="@+id/txt_view_result"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:gravity="center"
        android:text="Cuota"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_view_interes"
        app:layout_constraintStart_toEndOf="@+id/txt_view_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_view_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="ID"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_view_result"
        app:layout_constraintEnd_toStartOf="@+id/txt_view_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_view_pend"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Cap. Pend"
        app:layout_constraintBottom_toBottomOf="@+id/txt_view_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_view_interes"
        app:layout_constraintTop_toTopOf="@+id/txt_view_id" />

</androidx.constraintlayout.widget.ConstraintLayout>
